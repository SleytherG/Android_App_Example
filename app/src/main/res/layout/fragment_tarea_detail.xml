<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TareaDetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_tarea_detail"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:src="@mipmap/img_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_tarea_name_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="128dp"
            android:text="Nombre de tarea"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_tarea_detail" />

        <TextView
            android:id="@+id/tv_tarea_desc_detail"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="64dp"
            android:gravity="center_horizontal"
            android:text="DescripciÃ³n de la tarea"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_tarea_name_detail"
            tools:layout_editor_absoluteX="130dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>